/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background: #f5f6fa;
  min-height: 100vh;
}

/* 状态卡片 */
.status-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.status-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.status-text {
  color: #2c3e50;
  font-size: 28rpx;
}

/* 网格布局 */
.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.menu-item {
  height: 300rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.menu-item-hover {
  transform: translateY(-10rpx);
  opacity: 0.9;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.menu-title {
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

/* 角标提示 */
.menu-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: #ff4444;
  color: white;
  min-width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* 数据看板 */
.stats-panel {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 40rpx 20rpx;
  display: flex;
  justify-content: space-around;
}

.stats-item {
  text-align: center;
}

.stats-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.stats-value {
  display: block;
  font-size: 48rpx;
  color: #2c3e50;
  font-weight: bold;
}

.stats-label {
  color: #7f8c8d;
  font-size: 28rpx;
}