/* pages/repair_record/repair_record.wxss */
.container {
  padding-bottom: 120rpx;
}

.fab {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #6B8DD6;
  box-shadow: 0 8rpx 24rpx rgba(107,141,214,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.record-card {
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.record-id {
  color: #7f8c8d;
  font-size: 28rpx;
}

.status-tag {
  padding: 8rpx 16rpx !important;
}

.description {
  font-size: 32rpx;
  color: #2c3e50;
  line-height: 1.6;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  margin-top: 24rpx;
}

.meta-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.time {
  color: #95a5a6;
  font-size: 26rpx;
}

.actions van-button {
  margin-left: 16rpx;
}

.loading-wrapper {
  padding: 40rpx 0;
  text-align: center;
  color: #95a5a6;
}
