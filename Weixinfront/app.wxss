/**app.wxss**/
:root {
    --primary-color: #2196F3;
    --success-color: #4CAF50;
    --warning-color: #FF9800;
    --danger-color: #F44336;
}

/* 卡片式布局 */
.card {
    margin: 15rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
